  <script>
    // Function to make a section editable
    function makeEditable(element) {
      element.setAttribute('contenteditable', 'true');
      element.classList.add('editable');
      element.focus();
    }
    
    // Function to add a new section
    function addSection() {
      // Implement the logic to add a new section
      alert('New section added');
    }
    
    // Function to delete the last section
    function deleteSection() {
      // Implement the logic to delete the last section
      alert('Last section deleted');
    }
    
    // Function to save the edited CV as a PDF
    function saveCV() {
      const cvContent = document.documentElement.outerHTML; // Get the entire document content
      const data = new Blob([cvContent], { type: 'application/pdf' });

      const a = document.createElement('a');
      a.style.display = 'none';
      document.body.appendChild(a);
      const url = window.URL.createObjectURL(data);
      a.href = url;
      a.download = 'your_cv.pdf';
      a.click();
      window.URL.revokeObjectURL(url);
    }
  </script>
